<%= form_for @user, :url => {:action => "create"}, :html => {:multipart => true} do |f| %>

    <%= f.label :lastname %><br/>
    <%= f.text_field :lastname %><br/>
    
    <%= f.label :middlename %><br/>
    <%= f.text_field :middlename %><br/>
   
    <%= f.label :firstname %><br/>
    <%= f.text_field :firstname %><br/>

    <%= f.label :position %><br/>
    <%= f.text_field :position %><br/>
    
    <%= f.label :department, "Відділ"%></br>
    <%= f.select :department, ['Деканат', 'ПЗС', 'ІУСТ', 'ЗІММ'], :prompt => ''%></br>
  
    <%= f.label :password %><br/>
    <%= f.password_field :password %><br/>
    
    <%= f.submit "Create"%>
    
<% end %>