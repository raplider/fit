<% for post in @posts%>

   <div>
  
    <%= post.created_at%>
    <% if session[:id] !=nil %>   
        <% if post.admin == @user%>
           <%= link_to "Edit", {:controller => 'posts', :action => "edit", :id => "#{post.id}"}%>
            or
        <%= link_to "Delete", {:controller => "posts", :action => "delete", :id => "#{post.id}"}%>
        <% end %>
     <% end %>   
     </div>
     
    <div><%= raw post.body %></div> 
      <% if post.file_file_name != nil%>
    <div><%= link_to "View file", post.file.url(:original)%></div>
  <%end%></br> 
<% end %>
<%= will_paginate @posts %>