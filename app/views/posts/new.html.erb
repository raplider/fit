<%= tinymce :language => "uk"%>


<%= form_for @post, :url => {:controller => 'posts', :action => "create", :cabinet => @cabinet}  do |f| %>

  <%= f.label "Заголовок" %></br>
  <%= f.text_field :title%></br>

  <%= f.text_area :body, :class => "tinymce" %>
  
  
  <% if @user.department == "Деканат" %>
  	<%= f.label :form_of_study %>
  	<%= f.select :form_of_study, ["ДВ","ЗВ"] %> <br>
  <% else %>
    <%= f.label :category %>
    <%= f.select :category, ["Загальна","Внутрішня"] %> <br>
  <% end %>
  
  <%= f.file_field :file %><br/>
  
  <%= f.submit %>
<%end%>